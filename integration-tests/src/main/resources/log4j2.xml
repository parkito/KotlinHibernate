<?xml version="1.0" encoding="UTF-8"?>
<!--@author Artem Karnov @date 03.03.2017.-->
<!--artem.karnov@t-systems.com-->
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%-5level %d{HH:mm:ss.SSS} %logger{36} %n [%msg]%n"/>
        </Console>

        <RollingFile name="GlobalLog" append="true" fileName="../logs/all.log"
                     filePattern="logs/file %i.log">
            <PatternLayout pattern="%-5level %d{HH:mm:ss.SSS} %logger{36} %n [%msg]%n"/>
            <SizeBasedTriggeringPolicy size="2 GB"/>
        </RollingFile>

        <RollingFile name="DebugLog" append="true" fileName="../logs/debug.log"
                     filePattern="logs/file %i.log">
            <PatternLayout pattern="%-5level %d{HH:mm:ss.SSS} %logger{36} %n [%msg]%n"/>
            <Filters>
                <ThresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="fatal" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="info" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <SizeBasedTriggeringPolicy size="2 GB"/>
        </RollingFile>

        <RollingFile name="InfoLog" append="true" fileName="../logs/info.log"
                     filePattern="logs/file %i.log">
            <PatternLayout pattern="%-5level %d{HH:mm:ss.SSS} %logger{36} %n [%msg]%n"/>
            <Filters>
                <ThresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
                <ThresholdFilter level="fatal" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="debug" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <SizeBasedTriggeringPolicy size="2 GB"/>
        </RollingFile>

        <RollingFile name="WarnLog" append="true" fileName="../logs/warn.log"
                     filePattern="logs/file %i.log">
            <PatternLayout pattern="%-5level %d{HH:mm:ss.SSS} %logger{36} %n [%msg]%n"/>
            <Filters>
                <ThresholdFilter level="fatal" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
                <ThresholdFilter level="debug" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="info" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <SizeBasedTriggeringPolicy size="2 GB"/>
        </RollingFile>

        <RollingFile name="ErrorLog" append="true" fileName="../logs/error.log"
                     filePattern="logs/file %i.log">
            <PatternLayout pattern="%-5level %d{HH:mm:ss.SSS} %logger{36} %n [%msg]%n"/>
            <Filters>
                <ThresholdFilter level="fatal" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
                <ThresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="debug" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="info" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <SizeBasedTriggeringPolicy size="2 GB"/>
        </RollingFile>

        <RollingFile name="FatalLog" append="true" fileName="../logs/fatal.log"
                     filePattern="logs/file %i.log">
            <PatternLayout pattern="%-5level %d{HH:mm:ss.SSS} %logger{36} %n [%msg]%n"/>
            <Filters>
                <ThresholdFilter level="fatal" onMatch="ACCEPT" onMismatch="DENY"/>
                <ThresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="debug" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="info" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <SizeBasedTriggeringPolicy size="2 GB"/>
        </RollingFile>

    </Appenders>
    <Loggers>
        <logger name="debugFile" level="DEBUG">
            <AppenderRef ref="GlobalLog"/>
            <AppenderRef ref="DebugLog"/>
        </logger>
        <logger name="infoFile" level="INFO">
            <AppenderRef ref="GlobalLog"/>
            <AppenderRef ref="InfoLog"/>
        </logger>
        <logger name="warnFile" level="WARN">
            <AppenderRef ref="GlobalLog"/>
            <AppenderRef ref="WarnLog"/>
        </logger>
        <logger name="errorFile" level="ERROR">
            <AppenderRef ref="GlobalLog"/>
            <AppenderRef ref="ErrorLog"/>
        </logger>
        <logger name="fatalFile" level="fatal">
            <AppenderRef ref="GlobalLog"/>
            <AppenderRef ref="FatalLog"/>
        </logger>
        <Root level="DEBUG">
            <AppenderRef ref="GlobalLog"/>
            <AppenderRef ref="Console"/>
            <AppenderRef ref="DebugLog"/>
            <AppenderRef ref="InfoLog"/>
            <AppenderRef ref="WarnLog"/>
            <AppenderRef ref="ErrorLog"/>
            <AppenderRef ref="FatalLog"/>
        </Root>
    </Loggers>
</Configuration>